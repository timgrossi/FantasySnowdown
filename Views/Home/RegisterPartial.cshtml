@using FantasySnowdown.Models
@model User

<div class="jumbotron">
    <h1 class="display-4" style="text-align:center;">Register</h1>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div class="form-group row">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName" class="col-sm-2 col-form-label">FirstName</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="FirstName" placeholder="FirstName">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName" class="col-sm-2 col-form-label">LastName</label>
            <div class="col-sm-10">
            <input class="form-control" asp-for="LastName" placeholder="LastName">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="Username"></span>
            <label asp-for="Username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Username" placeholder="Username">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Password" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="ConPass"></span>
            <label asp-for="ConPass" class="col-sm-2 col-form-label">Confirm Pass</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="ConPass" placeholder="Confirm Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" style="float:right;" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>
